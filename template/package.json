{
  "name": "HelloWorld",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "runAndroid:debug": "react-native run-android",
    "runAndroid:debugRelease": "react-native run-android --variant=release",
    "runAndroid:staging": "ENVFILE=.env.staging react-native run-android",
    "runAndroid:stagingRelease": "ENVFILE=.env.staging react-native run-android --variant=release",
    "runAndroid:production": "ENVFILE=.env.prod react-native run-android",
    "runAndroid:productionRelease": "ENVFILE=.env.prod react-native run-android --variant=release",
    "makeAPK:stagingRelease": "cd android && ENVFILE=.env.staging ./gradlew assembleRelease",
    "makeAPK:productionRelease": "cd android && ENVFILE=.env.prod ./gradlew assembleRelease",
    "runiOS:debug": "react-native run-ios",
    "runiOS:debugRelease": "react-native run-ios --configuration Release",
    "runiOS:staging": "ENVFILE=.env.staging react-native run-ios",
    "runiOS:stagingRelease": "ENVFILE=.env.staging react-native run-ios --configuration Release",
    "runiOS:production": "ENVFILE=.env.prod react-native run-ios",
    "runiOS:productionRelease": "ENVFILE=.env.prod react-native run-ios --configuration Release",
    "detox-build:androidDebug": "detox build -c android.emu.debug",
    "detox-build:androidRelease": "detox build -c android.emu.release",
    "detox-test:androidDebug": "detox test -c android.emu.debug",
    "detox-test:androidDebug:reuse": "detox test -c android.emu.debug --reuse",
    "detox-test:androidRelease": "detox test -c android.emu.release",
    "detox-build:iosDebug": "detox build -c ios.sim.debug",
    "detox-build:iosRelease": "detox build -c ios.sim.release",
    "detox-test:iosDebug": "detox test -c ios.sim.debug",
    "detox-test:iosDebug:reuse": "detox test -c ios.sim.debug --reuse",
    "detox-test:iosRelease": "detox test -c ios.sim.release",
    "test": "jest",
    "bump-patch": "npm version patch --no-git-tag-version && bundle exec fastlane bump",
    "bump-minor": "npm version minor --no-git-tag-version && bundle exec fastlane bump",
    "bump-major": "npm version major --no-git-tag-version && bundle exec fastlane bump",
    "makeIcons": "bundle exec fastlane make_badge",
    "generate-image-imports": "node scripts/images.js",
    "generate-env-types": "node scripts/config.js",
    "link-font-assets": "react-native link",
    "validateTypeScript": "tsc --noEmit",
    "uninstallAndroid": "adb uninstall com.helloworld",
    "clearAndroid": "adb shell pm clear com.helloworld",
    "pixel3a": "emulator @Pixel_3a_XL_API_29"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.8.1",
    "@react-native-community/masked-view": "^0.1.7",
    "@react-native-community/netinfo": "^5.5.1",
    "@react-navigation/native": "^5.0.9",
    "@react-navigation/stack": "^5.1.1",
    "@reduxjs/toolkit": "^1.2.5",
    "@sentry/react-native": "^1.3.3",
    "react": "16.12.0",
    "react-native": "0.61.5",
    "react-native-config": "^1.0.0",
    "react-native-fast-image": "^7.0.2",
    "react-native-gesture-handler": "^1.6.0",
    "react-native-reanimated": "^1.7.0",
    "react-native-redash": "^10.0.1",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-screens": "^2.2.0",
    "react-native-splash-screen": "^3.2.0",
    "react-native-svg": "^12.0.3",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-observable": "^1.2.0",
    "redux-persist": "^6.0.0",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@types/jest": "^24.0.24",
    "@types/react-native": "^0.61.15",
    "@types/react-redux": "^7.1.4",
    "@types/react-test-renderer": "16.9.1",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-jest": "^25.0.0",
    "detox": "^16.0.1",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "^0.58.0",
    "react-test-renderer": "16.12.0",
    "reactotron-react-native": "^4.0.3",
    "reactotron-redux": "^3.1.2",
    "typescript": "^3.7.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_3a_XL_API_29"
        }
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_3a_XL_API_29"
        }
      },
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/HelloWorld.app",
        "build": "xcodebuild -workspace ios/HelloWorld.xcworkspace -scheme HelloWorld -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11"
        }
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/HelloWorld.app",
        "build": "xcodebuild -workspace ios/HelloWorld.xcworkspace -scheme HelloWorld -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11"
        }
      }
    }
  }
}
